# Client
# Include localhost for development.
CLIENT_ORIGIN=http://localhost:3000,http://localhost:5173,https://weborbitsolution.in,https://www.weborbitsolution.in
PAYMENT_CLIENT_URL=https://www.weborbitsolution.in

# Admin Auth
ADMIN_EMAIL=admin@weborbitsolution.in
ADMIN_PASSWORD=change_this_password
ADMIN_SESSION_SECRET=change_this_secret
ADMIN_SESSION_DAYS=7
COOKIE_SAMESITE=none
COOKIE_SECURE=true

# Server
SERVER_PORT=4000
MONGODB_URI=

# Brevo (Sendinblue) Transactional Email
BREVO_API_KEY=your_brevo_api_key
BREVO_SENDER_EMAIL=verified_sender@yourdomain.com
BREVO_SENDER_NAME=WebOrbitSolution
BREVO_ADMIN_EMAIL=hello@weborbitsolution.com

# PayU India
PAYU_MERCHANT_KEY=payu_key_here
PAYU_MERCHANT_SALT=payu_salt_here
PAYU_BASE_URL=https://test.payu.in/_payment
PAYU_CURRENCY=INR
SERVER_PUBLIC_URL=http://localhost:4000
PAYU_PLAN_LAUNCH_AMOUNT=30000
PAYU_PLAN_ORBIT_AMOUNT=80000
PAYMENTS_PROXY_SECRET=change_this_proxy_secret

# Optional overrides
# PAYU_SURL=https://api.yoursite.com/api/payments/payu/success
# PAYU_FURL=https://api.yoursite.com/api/payments/payu/failure

# Blog seeding safety (recommended in production)
SEED_BLOG_ON_BOOT=false
BLOG_SEED_MODE=insert-missing
